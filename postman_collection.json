              "host": ["{{baseUrl}}"],
              "path": ["departments", "1"]
            }
          }
        },
        {
          "name": "Create Department",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Research & Development\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/departments",
              "host": ["{{baseUrl}}"],
              "path": ["departments"]
            }
          }
        },
        {
          "name": "Update Department",
          "request": {
            "method": "PATCH",
