          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/employees/1",
              "host": ["{{baseUrl}}"],
              "path": ["employees", "1"]
            }
          }
        }
      ]
    },
