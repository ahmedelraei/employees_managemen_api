              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Research & Development Updated\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/departments/1",
              "host": ["{{baseUrl}}"],
              "path": ["departments", "1"]
            }
          }
        },
        {
          "name": "Delete Department",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/departments/1",
              "host": ["{{baseUrl}}"],
              "path": ["departments", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/employees?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["employees"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Employees with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/employees?department_id=2&search=john&sort_by=salary&order=DESC",
              "host": ["{{baseUrl}}"],
              "path": ["employees"],
              "query": [
                {
                  "key": "department_id",
                  "value": "2"
                },
                {
                  "key": "search",
                  "value": "john"
                },
                {
                  "key": "sort_by",
                  "value": "salary"
                },
                {
                  "key": "order",
                  "value": "DESC"
                }
              ]
            }
          }
        },
        {
          "name": "Get Employee by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/employees/1",
              "host": ["{{baseUrl}}"],
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Get Employee Statistics",
          "request": {
            "method": "GET",
            "header": [],
